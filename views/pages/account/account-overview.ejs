<div id="account-overview" v-cloak>
  <div class="container">
    <h1>Mijn account</h1>
    <hr/>
    <div class="row mb-3">
      <div class="col-sm-6">
        <h4>Persoonlijke informatie</h4>
      </div>
      <div class="col-sm-6">
        <span class="float-sm-right">
          <a class="btn btn-sm btn-outline-info account-settings-button" href="/account/profile">Informatie aanpassen</a>
        </span>
      </div>
    </div>
    <br>
    <h6>Algemene informatie</h6>
    <div class="row">
      <div class="col-4">PeopleSoft nummer</div>
      <div class="col"><strong>{{me.peopleSoftNumber}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Rangregistratienummer</div>
      <div class="col"><strong>{{me.rankRegistrationNumber}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Rang</div>
      <div class="col"><strong>{{me.rank}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Voorletters</div>
      <div class="col"><strong>{{me.initials}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Naam</div>
      <div class="col"><strong>{{me.fullName}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Adres</div>
      <div class="col"><strong>{{me.address}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Postcode</div>
      <div class="col"><strong>{{me.postalCode}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Woonplaats</div>
      <div class="col"><strong>{{me.hometown}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Geboortedatum</div>
      <div class="col"><strong>{{me.birthDate}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Telefoonnummer</div>
      <div class="col"><strong>{{me.phoneNumber1}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Extra telefoonnummer</div>
      <div class="col"><strong>{{me.phoneNumber2}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">E-mailadres</div>
      <div class="col">
        <strong :class="[me.emailStatus === 'unconfirmed' || me.emailStatus === 'change-requested' ? 'text-muted' : '']">{{me.emailChangeCandidate ? me.emailChangeCandidate : me.emailAddress}}</strong>
        <span v-if="me.emailStatus === 'unconfirmed' || me.emailStatus === 'change-requested'" class="badge badge-pill badge-warning">Unverified</span>
      </div>
    </div>
    <br>
    <h6>Contact bij nood</h6>
    <div class="row">
      <div class="col-4">Naam</div>
      <div class="col"><strong>{{me.emergencyContactName}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Telefoonnummer</div>
      <div class="col"><strong>{{me.emergencyContactNumber}}</strong></div>
    </div>
    <br>
    <h6>Overige informatie</h6>
    <div class="row">
      <div class="col-4">Rijbewijzen</div>
      <div class="col"><strong>{{me.driversLicenses}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">E-learning modules</div>
      <div class="col"><strong>{{me.eModules}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Amarok familiarisatie</div>
      <div class="col"><strong><% if(me.amarokFamiliarization){%><%='Ja'%><%}else{%><%='Nee'%><%}%></strong></div>
    </div>
    <div class="row">
      <div class="col-4">ARP</div>
      <div class="col"><strong>{{me.ARPDate}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Beëdiging</div>
      <div class="col"><strong>{{me.swearingInDate}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Defensie conditieproef</div>
      <div class="col"><strong>{{me.staminaTestDate}}</strong></div>
    </div>
    <div class="row">
      <div class="col-4">Overige opmerkingen/bijzonderheden</div>
      <div class="col"><strong>{{me.other}}</strong></div>
    </div>
    <br>
    <h6>Status documenten</h6>
    <% if(me.amarokFamiliarizationStatus) { %>
    <div class="row">
      <div class="col-4">Amarok familiarisatie</div>
      <div class="col">{{me.amarokFamiliarizationStatus}}</div>
    </div>
    <% } %>
    <% if(me.personalAppealList) { %>
    <div class="row">
      <div class="col-4">Persoonlijke appèllijst</div>
      <div class="col">{{me.personalAppealListStatus}}</div>
    </div>
    <% } %>
    <% if(me.VRAStatus) { %>
    <div class="row">
      <div class="col-4">VRA</div>
      <div class="col">{{me.VRAStatus}}</div>
    </div>
    <% } %>
    <% if(me.BPBBStatus) { %>
    <div class="row">
      <div class="col-4">Brandpreventie en brandbestrijding</div>
      <div class="col">{{me.BPBBStatus}}</div>
    </div>
    <% } %>
    <% if(me.CBRNStatus) { %>
    <div class="row">
      <div class="col-4">CBRN</div>
      <div class="col">{{me.CBRNStatus}}</div>
    </div>
    <% } %>
    <% if(me.HPGStatus) { %>
    <div class="row">
      <div class="col-4">HPG</div>
      <div class="col">{{me.HPGStatus}}</div>
    </div>
    <% } %>
    <% if(me.ZHKHStatus) { %>
    <div class="row">
      <div class="col-4">ZHKH</div>
      <div class="col">{{me.ZHKHStatus}}</div>
    </div>
    <% } %>
    <% if(me.PWColtStatus) { %>
    <div class="row">
      <div class="col-4">Persoonlijk wapen Colt</div>
      <div class="col">{{me.PWColtStatus}}</div>
    </div>
    <% } %>
    <% if(me.SAAAWStatus) { %>
    <div class="row">
      <div class="col-4">Search Aware & Ammunition Awareness</div>
      <div class="col">{{me.SAAAWStatus}}</div>
    </div>
    <% } %>
    <% if(me.MRStatus) { %>
    <div class="row">
      <div class="col-4">Militair recht</div>
      <div class="col">{{me.MRStatus}}</div>
    </div>
    <% } %>
    <% if(me.NIStatus) { %>
    <div class="row">
      <div class="col-4">Nationale Inzet</div>
      <div class="col">{{me.NIStatus}}</div>
    </div>
    <% } %>
    <% if(me.PPStatus) { %>
    <div class="row">
      <div class="col-4">Predictive Profiling</div>
      <div class="col">{{me.PPStatus}}</div>
    </div>
    <% } %>
    <% if(me.ADRStatus) { %>
    <div class="row">
      <div class="col-4">ADR</div>
      <div class="col">{{me.ADRStatus}}</div>
    </div>
    <% } %>
    <hr/>
    <div class="row mb-3">
      <div class="col-sm-6">
        <h4>Wachtwoord</h4>
      </div>
      <div class="col-sm-6">
        <span class="float-sm-right">
          <a class="btn btn-sm btn-outline-info account-settings-button" href="/account/password">Verander wachtwoord</a>
        </span>
      </div>
    </div>
    <div class="row">
      <div class="col-4">Wachtwoord:</div>
      <div class="col"><strong>••••••••••</strong></div>
    </div>
    <hr/>
    <div class="row mb-3" v-if="isBillingEnabled">
      <div class="col-sm-6">
        <h4>Billing</h4>
      </div>
      <div class="col-sm-6">
        <span class="float-sm-right">
          <ajax-button :syncing="syncingOpenCheckout || syncingUpdateCard" class="btn btn-sm btn-outline-info account-settings-button" @click="clickStripeCheckoutButton()">
            <span slot="syncing-state">
              <span v-if="syncingOpenCheckout">Connecting...</span>
              <span v-else>Updating...</span>
            </span>
            <span slot="default">{{ me.hasBillingCard ? 'Change card' : 'Add card' }}</span>
          </ajax-button>
        </span>
      </div>
    </div>
    <div v-if="isBillingEnabled && me.hasBillingCard">
      <div class="row">
        <div class="col-3">Credit card:</div>
        <div class="col">{{me.billingCardBrand}} ending in <strong>{{me.billingCardLast4}}</strong> <a class="remove-button ml-2" @click="clickRemoveCardButton()">Remove</a></div>
      </div>
      <div class="row">
        <div class="col-3">Expiration:</div>
        <div class="col">{{me.billingCardExpMonth}}/{{me.billingCardExpYear}}</div>
      </div>
    </div>
    <div class="alert alert-danger" v-else-if="isBillingEnabled && cloudError">
      There was an error updating your credit card information. Please check your information and try again, or <a href="/contact">contact support</a> if the error persists.
    </div>
    <div class="alert alert-secondary" v-else-if="isBillingEnabled">
      You have not linked a payment source to your account. In order to access paid features, you'll need to provide your credit card information. (Don't worry: you will only be charged when you've reached the limit of your free plan.)
    </div>
  </div>

  <% /* Confirm Remove Card Info Modal */ %>
  <modal v-if="removeCardModalVisible" @close="closeRemoveCardModal()" v-cloak>
    <div class="modal-header">
      <h5 class="modal-title">Remove Card Info?</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span>&times;</span>
      </button>
    </div>
    <ajax-form action="updateBillingCard" :syncing.sync="syncingRemoveCard" :cloud-error.sync="cloudError" :handle-parsing="handleParsingRemoveCardForm" @submitted="submittedRemoveCardForm()">
      <div class="modal-body">
        <p>Are you sure you want to remove your {{me.billingCardBrand}} ending in <strong>{{me.billingCardLast4}}</strong>?</p>
        <p class="text-muted">This may restrict your access to paid features.</p>
        <p class="text-danger" v-if="cloudError"><small>An error occured while processing your request. Please check your information and try again, or <a href="/contact">contact support</a> if the error persists.</small></p>
      </div>
      <div class="modal-footer">
        <button data-dismiss="modal" class="btn btn-outline-secondary mr-1">Nevermind</button>
        <ajax-button type="submit" :syncing="syncingRemoveCard" class="btn btn-danger ml-1">Remove</ajax-button>
      </div>
    </ajax-form>
  </modal>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
